@model IEnumerable<PizzaShopWebApp.Models.Pizza>

<!DOCTYPE html>

<html>
<head>
    <title> Shop Pizza</title>
</head>
<body>
    <h3>Pizzas</h3>
    <form method="post">
        @foreach (var pizza in Model)
        {
            <div>
                <img src=@pizza.Image />
                <p>@pizza.Name</p>
                <p>$ @pizza.Price </p>
                <p>@pizza.Description</p>
                <p>
                    <a class="btn btn-primary" role="button" href="~/Home/Show/@pizza.Id">Show</a>
                    <a class="btn btn-primary" role="button" href="~/Home/Buy/@pizza.Id">Buy</a>
                </p>
            </div>
        }
    </form>
   
</body>
</html>