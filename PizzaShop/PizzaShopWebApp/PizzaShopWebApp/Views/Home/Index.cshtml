@model IEnumerable<PizzaShopWebApp.Models.Pizza>



<!DOCTYPE html>

<html>
<head>
    <title> Shop Pizza</title>
    <link type="text/css" rel="stylesheet" href="~/css/index.css" />
</head>
<body>
    <h3>Pizzas</h3>
    <form method="post">
        @foreach (var pizza in Model)
        {
        <div>
            <input type="hidden" value="@ViewBag.Id" name="Id" />
            <img src=@pizza.Image name="Image" />
            <p name="Name">@pizza.Name </p>
            <p name="Price">$ @pizza.Price </p>
            <p name="Description">@pizza.Description</p>
            <p>
                <a class="btn btn-primary" role="button" href="~/Home/Show/@pizza.Id">Show</a>
                <a class="btn btn-primary" role="button" href="~/Home/Buy/@pizza.Id">Buy</a>
            </p>
        </div>
        }
    </form>

</body>
</html>